<h1>Listing profiles</h1>

<table class="table">
    <tr>
      <th>Name</th>
      <th>User</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @profiles) do |profile| %>
    <td><%= profile.name %></td>
    <td><%= profile.user %></td>
      <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Profile', new_profile_path, class: 'btn btn-success' %>
</div>
